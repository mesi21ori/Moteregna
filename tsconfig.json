{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", // Next.js works best with this
    "moduleResolution": "bundler", // Next.js 13+ recommended
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "jsx": "preserve",
    "plugins": [{"name": "next"}],
    "strictNullChecks": true,
    "types": ["next", "node"],
    "baseUrl": ".", // Helps with path resolution
    "paths": {
      "@/*": ["./src/*"] // Optional but recommended for alias imports
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}